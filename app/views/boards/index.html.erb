<div class="card border-dark">
  <div class="card-header">
    Boards

    <div class="actions-header">
      <%= link_to 'Nova Board', new_board_path, class: "btn btn-success btn-sm" %>
    </div>
  </div>
  <div class="card-body text-dark">
    <p id="notice"><%= notice %></p>
    <div class="table-step">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th>Name</th>
          <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @boards.each do |board| %>
          <tr>
            <td><%= board.id %></td>
            <td><%= board.name %></td>
            <td>
              <%= link_to 'Editar', edit_board_path(board), class: "btn btn-warning btn-sm", title: "Editar Board" %>
              <%= link_to 'Deletar', board, class: "btn btn-danger btn-sm", title: "Deletar Board",
                          method: :delete, data: {confirm: 'Você tem certeza?'} %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
